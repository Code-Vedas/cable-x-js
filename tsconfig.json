{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "types": ["node", "jasmine"]
  },
  "exclude": ["specs", "node_modules"]
}
